# Archivo de ejemplo .env para backend (Postgres)
# Copia este archivo a .env y ajusta valores según tu entorno

# Conexión a la base de datos
DB_USER=postgres
DB_PASS=postgres
DB_NAME=infoaprende_dev
DB_NAME_TEST=infoaprende_test
DB_HOST=127.0.0.1
DB_PORT=5432

# Puerto del servidor
PORT=4000

# Opciones de arranque
# Establece 'true' para omitir migraciones automáticas (Umzug) al iniciar
SKIP_MIGRATIONS=false

# Establece 'true' para omitir la creación automática de datos iniciales (seeders) al iniciar
SKIP_SEEDS=false

# JWT (ejemplo, ajustar en producción)
JWT_SECRET=tu_secreto_jwt_aqui
JWT_EXPIRES_IN=7d
