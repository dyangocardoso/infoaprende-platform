# Normalización por defecto
* text=auto

# Forzar LF para archivos de código, config y documentación
*.js    text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.md    text eol=lf
.github/workflows/* text eol=lf
scripts/* text eol=lf
schemas/* text eol=lf
docs/*  text eol=lf

# Mantener CRLF en scripts Windows
*.bat   text eol=crlf
*.ps1   text eol=crlf
